<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Signing in" Height="220" Width="450"
        ResizeMode="NoResize"
        >
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="100,12,0,0" Name="textBox1" VerticalAlignment="Top" Width="316" KeyDown="OnKeyDownHandler"/>
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="100,60,0,0" Name="textBox2" VerticalAlignment="Top" Width="316" KeyDown="OnKeyDownHandler"/>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="100,108,0,0" Name="textBox3" VerticalAlignment="Top" Width="316" KeyDown="OnKeyDownHandler" />

        <Label Content="Username" Height="28" HorizontalAlignment="Left" Margin="12,10,0,0" Name="label1" VerticalAlignment="Top" Width="82"/>
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="30,58,0,0" Name="label2" VerticalAlignment="Top" Width="64" />
        <Label Content="IP address" Height="28" HorizontalAlignment="Left" Margin="30,106,0,0" Name="label3" VerticalAlignment="Top" Width="64" />
        <Button Content="Sign in" Height="23" HorizontalAlignment="Left" Margin="12,155,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="Login_Click" />
    </Grid>
</Window>
